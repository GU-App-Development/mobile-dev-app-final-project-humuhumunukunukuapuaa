<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/main_page"
    tools:context=".PlayActivity">

    <ImageView
        android:id="@+id/playBtnEasy"
        android:layout_gravity="center"
        android:layout_marginTop="350dp"
        android:src="@drawable/playbtneasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/playBtnNormal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/playbtnnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/playBtnHard"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/playbtnhard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>